@using MvcCv.Models.Entity
@model List<TblHakkimda> 


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Resume - Start Bootstrap Theme</title>
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Tema CSS (Bootstrap'i içerir)-->
    <link href="/startbootstrap-resume-gh-pages/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Ertuğrul Yüksel</span>
            @foreach (var x in Model)
            {
                <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="@x.Resim" alt="" /></span>
            }

        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">Hakkımda</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">Deneyimlerim</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">Eğitimlerim</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">Yeteneklerim</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">Hobilerim</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#awards">Sertifikalarım</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#content">İletişim</a></li>
            </ul>
        </div>
    </nav>
    <!-- Sayfa İçeriği-->
    <div class="container-fluid p-0">
        <!-- Hakkimda-->

        @foreach (var x in Model)
        {
            <section class="resume-section" id="about">
                <div class="resume-section-content">
                    <h1 class="mb-0">
                        @x.Ad
                        <span class="text-primary">@x.Soyad</span>
                    </h1>
                    <div class="subheading mb-5">
                        @x.Adres ·
                        <a href="@x.Mail">@x.Mail</a>
                    </div>
                    <p class="lead mb-5">@x.Aciklama</p>
                    @Html.Action("SosyalMedya")
                </div>
            </section>
        }

        <hr class="m-0" />

        <!-- Deneyimlerim-->
        <section class="resume-section" id="experience">
            @Html.Action("Deneyim")
        </section>
        <hr class="m-0" />
        <!-- Eğitimlerim-->
        <section class="resume-section" id="education">
            @Html.Action("Egitimlerim")
        </section>
        <hr class="m-0" />
        <!-- Yeteneklerim-->
        <section class="resume-section" id="skills">
            @Html.Action("Yeteneklerim")
        </section>
        <hr class="m-0" />
        <!-- Hobilerim-->
        <section class="resume-section" id="interests">
            @Html.Action("Hobilerim")
        </section>
        <hr class="m-0" />
        <!-- Sertifikalarım-->
        <section class="resume-section" id="awards">
            @Html.Action("Sertifikalar")
        </section>

        <!-- İletişim-->
        <section class="resume-section" id="content">
            @Html.Action("İletisim")
        </section>

    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Üçüncü Taraf Eklentisi JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Tema JS-->
    <script src="/startbootstrap-resume-gh-pages/js/scripts.js"></script>
</body>
</html>
