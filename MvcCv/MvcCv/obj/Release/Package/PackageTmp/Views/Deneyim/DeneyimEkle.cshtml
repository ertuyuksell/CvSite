
@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Yeni Deneyim Ekleme Sayfası</h4>
<br />
<form class="form-group" method="post">
    <label>Başlık</label>
    <input type="text" name="Baslik" class="form-control" placeholder="Başlığı yazınız." />
    <br />
    <label>Alt Başlık</label>
    <input type="text" name="AltBaslik" class="form-control" placeholder="Alt Başlığı yazınız." />
    <br />
    <label>Açıklama</label>
    <textarea placeholder="Açıklamanızı giriniz" name="Aciklama" class="form-control" rows="5"></textarea>
    <br />
    <label>Tarih</label>
    <input type="text" name="Tarih" class="form-control" placeholder="Tarihi yazınız." />
    <br />

    <button class="btn btn-info">Kaydet</button>

</form>
