@using MvcCv.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <!--<div class="card-header p-2">
                        </div>--><!-- /.card-header -->
                        <div class="card-body">
                           
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        @foreach (var x in Model)
                                        {
                                            <!-- timeline time label -->
                                            @*<div class="time-label">
                                                <span class="bg-success">
                                                    10 Feb. 2014
                                                </span>
                                            </div>*@
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            <div>
                                                <i class="fas fa-comment bg-primary"></i>
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @x.Aciklama
                                                    </div>
                                                    <div class="timeline-footer">
                                                        <a href="/Sertifika/SertifikaGetir/@x.ID" class="btn btn-primary btn-sm">Düzenle</a>
                                                        <a href="/Sertifika/SertifikaSil/@x.ID" class="btn btn-danger btn-sm">Sil</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                    <a href="/Sertifika/SertifikaEkle" class="btn btn-info">Yeni Sertifika Ekle</a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>